{% extends 'base.html.twig' %}

{% block title %}Détail d'une entreprise{% endblock %}

{% block body %}

    <main class="container mt-5 pt-5">
        <h1 class="display-5 fw-bold text-body-emphasis mb-5">Détail de l'entreprise :</h1>
        
        <h2>{{ entreprise }}</h2>
        <p>
            <b>Adresse :</b> {{ entreprise.adresseComplete }} <br>
            <b>Date de création :</b> {{ entreprise.dateCreation | date("d/m/Y") }} <br>
        </p>

        <h3>Liste des salariés :</h3>
        {% if entreprise.employes | length > 0 %}
            <table class="table">
                <thead>
                    <tr>
                        <th>Employé</th>
                    </tr>
                </thead>

                <tbody>
                    {% for employe in entreprise.employes %}
                        <tr>
                            <td><a href="{{ path('show_employe', {'id': employe.id}) }}">{{ employe }}</a></td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
         {% else %}
            <p>Aucun employé dans cette entreprise.</p>
        {% endif %}
    </main>

{% endblock %}