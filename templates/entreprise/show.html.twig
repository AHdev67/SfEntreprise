{% extends 'base.html.twig' %}

{% block title %}Détail d'une entreprise{% endblock %}

{% block body %}
    
    <h1>Détail de l'entreprise :</h1>
    
    <h2>{{ entreprise }}</h2>
    <p>
        Adresse : {{ entreprise.adresseComplete }} <br>
        Date de création : {{ entreprise.dateCreation | date("d/m/Y") }} <br>
    </p>

    <h3>Liste des salariés :</h3>
    {% if entreprise.employes | length > 0 %}
        <ul>
        {% for employe in entreprise.employes %}
            <li><a href="{{ path('show_employe', {'id': employe.id}) }}">{{ employe }}</a></li>
        {% endfor %}
        </ul>
    {% else %}
        <p>Aucun employé dans cette entreprise.</p>
    {% endif %}
    

{% endblock %}