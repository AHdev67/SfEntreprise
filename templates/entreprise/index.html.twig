{% extends 'base.html.twig' %}

{% block title %}Liste des entreprises{% endblock %}

{% block body %}
    <main class="container mt-5 pt-5">
        <h1 class="display-5 fw-bold text-body-emphasis mb-5">Liste des entreprises :</h1>

        <a class="btn btn-success" href="{{ path('new_entreprise') }}">Ajouter une entreprise</a>
        
        <table class="table">
            <thead>
                <tr>
                    <th>Entreprises</th>
                </tr>
            </thead>
            <tbody>
                {# {{ dump(_context) }} #}
                {% for entreprise in entreprises %}
                    <tr>
                        <td>
                            <a href="{{ path('show_entreprise', {'id': entreprise.id}) }}">{{ entreprise }}</a> 
                            <a href="{{ path('edit_entreprise', {'id': entreprise.id}) }}"><i class="fa-solid fa-pen-to-square"></i></a> |
                            <a class="delbtn" href="{{ path('delete_entreprise', {'id': entreprise.id}) }}"><i class="fa-solid fa-trash"></i></a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
            
        </table class="table">
    </main>

{% endblock %}
