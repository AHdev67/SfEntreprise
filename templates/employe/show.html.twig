{% extends 'base.html.twig' %}

{% block title %}Détail d'un employé{% endblock %}

{% block body %}
    
    <h1>Détail de l'employé :</h1>
    
    <h2>{{ employe }}</h2>
    <p>
        Employeur : <a href="{{ path('show_entreprise', {'id': employe.entreprise.id}) }}">{{ employe.entreprise }}</a> <br>
        Ville de résidence : 
        {% if employe.ville | length > 0 %}
            {{ employe.ville }} <br>
        {% else %}
            Information non renseignée. <br>
        {% endif %}
        Date de naissance : {{ employe.dateNaissance | date("d/m/Y") }} <br>
        Age : {{ employe.age }} ans. <br>
        Date d'embauche : {{ employe.dateEmbauche | date("d/m/Y") }} <br>
    </p>

{% endblock %}